<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_word"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.buechstabet.arlendai.buechstabet.AddWord">

    <EditText
        android:id="@+id/addWord_definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/addWord_usage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addWord_word"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="44dp"
        android:text="@string/wort_definition"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addWord_word"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="180dp"
        android:text="@string/usage_example"
        android:textSize="18sp" />

    <CheckBox
        android:text="@string/adjektiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addWord_cB_Adjektiv"
        android:layout_below="@+id/addWord_cB_Verb"
        android:layout_alignLeft="@+id/addWord_add"
        android:layout_alignStart="@+id/addWord_add" />

    <CheckBox
        android:text="@string/verb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addWord_cB_Verb"
        android:layout_below="@+id/addWord_cB_Nomen"
        android:layout_alignLeft="@+id/addWord_cB_Adjektiv"
        android:layout_alignStart="@+id/addWord_cB_Adjektiv" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:text="@string/neues_wort"
        android:textSize="18sp" />

    <CheckBox
        android:text="@string/nomen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addWord_cB_Nomen"
        android:layout_alignTop="@+id/addWord_word"
        android:layout_alignLeft="@+id/addWord_cB_Verb"
        android:layout_alignStart="@+id/addWord_cB_Verb" />

    <EditText
        android:id="@+id/addWord_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:text="@string/credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:textSize="8sp" />

    <Button
        android:text="@string/hinzuf_gen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addWord_add"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/zur_ck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addWord_back"
        android:textSize="14sp"
        android:layout_above="@+id/addWord_word"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>
