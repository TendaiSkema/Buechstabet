<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_discription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.buechstabet.arlendai.buechstabet.Discription">

    <Button
        android:text="Bearbeiten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/discription_Back"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/discription_edit" />

    <Button
        android:text="ZurÃ¼ck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discription_Back"
        android:textSize="14sp"
        android:layout_alignParentTop="true"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@+id/discription_Back"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/space43"/>

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/discription_discription"
        android:layout_weight="1.00"
        android:layout_below="@+id/space43"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView6"
        android:textSize="18sp" />

    <TextView
        android:text="@string/credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView6"
        android:textSize="8sp" />

</RelativeLayout>
